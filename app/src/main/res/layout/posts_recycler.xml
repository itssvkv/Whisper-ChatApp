<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <androidx.constraintlayout.widget.ConstraintLayout        android:id="@+id/postsLayoutWithOutPhoto"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="10dp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent">        <com.google.android.material.imageview.ShapeableImageView            android:id="@+id/currentUserIv"            android:layout_width="40dp"            android:layout_height="40dp"            android:layout_gravity="start"            android:scaleType="fitXY"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:shapeAppearanceOverlay="@style/userProfileImg"            tools:src="@drawable/app_icon" />        <TextView            android:id="@+id/currentUserName"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_marginStart="10dp"            android:textColor="@color/black"            android:textSize="18sp"            app:layout_constraintStart_toEndOf="@id/currentUserIv"            app:layout_constraintTop_toTopOf="parent"            tools:text="Mohammed Gamal" />        <TextView            android:id="@+id/postCaption"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_marginStart="10dp"            android:layout_marginTop="25dp"            android:gravity="start"            android:padding="4dp"            android:textColor="@color/black"            android:textSize="18sp"            app:layout_constraintStart_toEndOf="@+id/currentUserIv"            app:layout_constraintTop_toBottomOf="@+id/currentUserName"            tools:text="Mohammed Gamal" />        <View            android:id="@+id/postUpLine"            android:layout_width="wrap_content"            android:layout_height="1dp"            android:layout_marginTop="8dp"            android:background="@color/black"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintBottom_toTopOf="@+id/likeLayout"            app:layout_constraintTop_toBottomOf="@id/postCaption" />        <androidx.constraintlayout.widget.ConstraintLayout            android:id="@+id/likeLayout"            android:layout_width="match_parent"            android:layout_height="wrap_content"            app:layout_constraintEnd_toEndOf="parent"            android:paddingVertical="8dp"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@id/postUpLine">            <ImageView                android:id="@+id/likeIv"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:contentDescription="@string/posts"                android:src="@drawable/like"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent" />            <TextView                android:id="@+id/likeTv"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/like"                android:gravity="center"                android:layout_marginStart="8dp"                android:textColor="@color/black"                android:textSize="18sp"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintTop_toTopOf="parent"                app:layout_constraintStart_toEndOf="@id/likeIv"/>        </androidx.constraintlayout.widget.ConstraintLayout>        <androidx.constraintlayout.widget.ConstraintLayout            android:id="@+id/shareLayout"            android:layout_width="match_parent"            android:layout_height="wrap_content"            app:layout_constraintEnd_toEndOf="parent"            android:paddingVertical="8dp"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@id/postUpLine">            <ImageView                android:id="@+id/shareIv"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:contentDescription="@string/posts"                android:src="@drawable/share"                android:layout_marginEnd="8dp"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toStartOf="@+id/shareTv"                app:layout_constraintTop_toTopOf="parent" />            <TextView                android:id="@+id/shareTv"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/share"                android:gravity="center"                android:layout_marginStart="4dp"                android:textColor="@color/black"                android:textSize="18sp"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintTop_toTopOf="parent"                app:layout_constraintEnd_toEndOf="parent"/>        </androidx.constraintlayout.widget.ConstraintLayout>        <View            android:id="@+id/postDownLine"            android:layout_width="wrap_content"            android:layout_height="1dp"            android:background="@color/black"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@id/shareLayout" />    </androidx.constraintlayout.widget.ConstraintLayout>    <androidx.constraintlayout.widget.ConstraintLayout        android:id="@+id/postsLayoutWithPhoto"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="10dp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent">        <com.google.android.material.imageview.ShapeableImageView            android:id="@+id/currentUserIvWithPhoto"            android:layout_width="40dp"            android:layout_height="40dp"            android:layout_gravity="start"            android:scaleType="fitXY"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:shapeAppearanceOverlay="@style/userProfileImg"            tools:src="@drawable/app_icon" />        <TextView            android:id="@+id/currentUserNameWithPhoto"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_marginStart="10dp"            android:textColor="@color/black"            android:textSize="18sp"            app:layout_constraintStart_toEndOf="@id/currentUserIvWithPhoto"            app:layout_constraintTop_toTopOf="parent"            tools:text="Mohammed Gamal" />        <TextView            android:id="@+id/postCaptionWithPhoto"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_marginStart="10dp"            android:layout_marginTop="25dp"            android:gravity="start"            android:padding="4dp"            android:textColor="@color/black"            android:textSize="18sp"            app:layout_constraintStart_toEndOf="@+id/currentUserIvWithPhoto"            app:layout_constraintTop_toBottomOf="@+id/currentUserNameWithPhoto"            tools:text="Mohammed Gamal" />        <ImageView            android:id="@+id/postPhoto"            android:layout_width="match_parent"            android:layout_height="wrap_content"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintTop_toBottomOf="@+id/postCaptionWithPhoto"            tools:src="@drawable/app_icon"            android:adjustViewBounds="true"            android:scaleType="fitXY"            android:contentDescription="@string/post" />        <View            android:id="@+id/postUpLineWithPhoto"            android:layout_width="wrap_content"            android:layout_height="1dp"            android:layout_marginTop="8dp"            android:background="@color/black"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintBottom_toTopOf="@+id/likeLayoutWithPhoto"            app:layout_constraintTop_toBottomOf="@id/postPhoto" />        <androidx.constraintlayout.widget.ConstraintLayout            android:id="@+id/likeLayoutWithPhoto"            android:layout_width="match_parent"            android:layout_height="wrap_content"            app:layout_constraintEnd_toEndOf="parent"            android:paddingVertical="8dp"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@id/postUpLineWithPhoto">            <ImageView                android:id="@+id/likeIvWithPhoto"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:contentDescription="@string/posts"                android:src="@drawable/like"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent" />            <TextView                android:id="@+id/likeTvWithPhoto"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/like"                android:gravity="center"                android:layout_marginStart="8dp"                android:textColor="@color/black"                android:textSize="18sp"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintTop_toTopOf="parent"                app:layout_constraintStart_toEndOf="@id/likeIvWithPhoto"/>        </androidx.constraintlayout.widget.ConstraintLayout>        <androidx.constraintlayout.widget.ConstraintLayout            android:id="@+id/shareLayoutWithPhoto"            android:layout_width="match_parent"            android:layout_height="wrap_content"            app:layout_constraintEnd_toEndOf="parent"            android:paddingVertical="8dp"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@id/postUpLineWithPhoto">            <ImageView                android:id="@+id/shareIvWithPhoto"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:contentDescription="@string/posts"                android:src="@drawable/share"                android:layout_marginEnd="8dp"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toStartOf="@+id/shareTvWithPhoto"                app:layout_constraintTop_toTopOf="parent" />            <TextView                android:id="@+id/shareTvWithPhoto"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/share"                android:gravity="center"                android:layout_marginStart="4dp"                android:textColor="@color/black"                android:textSize="18sp"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintTop_toTopOf="parent"                app:layout_constraintEnd_toEndOf="parent"/>        </androidx.constraintlayout.widget.ConstraintLayout>        <View            android:id="@+id/postDownLineWithPhoto"            android:layout_width="wrap_content"            android:layout_height="1dp"            android:background="@color/black"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@id/shareLayoutWithPhoto" />    </androidx.constraintlayout.widget.ConstraintLayout></androidx.constraintlayout.widget.ConstraintLayout>